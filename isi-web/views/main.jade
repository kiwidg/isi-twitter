    #map
    input#duration(type='text')
    #error.modal.fade
      .modal-dialog.modal-sm
        .alert.alert-danger
          | No results found
          button.close(type='button', data-dismiss='modal', onclick="document.getElementById('searchBox').focus();") x
    script(type='text/javascript').
      var tweets = !{JSON.stringify(tweets)};
      var date = new Date().toUTCString();
    script(src='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js')
    script(src='/js/leaflet.awesome-markers.js') 
    script(src='http://cdn.jsdelivr.net/jquery/2.1.0/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/data.js')
    script(src='/js/map.js') 
    script(type='text/javascript').
      $('#go').on('click',function(e) { $(location).attr('href',$(location).attr('href').split('?')[0] + '?dur='+ $('#duration').val() );});
      $('#duration').keyup(function(e) { if (e.keyCode == 13) { $('#go').click();}});
